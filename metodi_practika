/*
Задача 4:
Поиск максимального элемента в списке
Напишите метод, который находит максимальный элемент в списке.
*/
__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

using System;

namespace method
{
    class Program
    {
        static int findMax(List<int> numbers)
        {
            if (numbers == null || !numbers.Any())
            {
                Console.WriteLine("Список не может быть пустым.");
                return int.MinValue;
            }
            return numbers.Max();
        }

        static void Main(string[] args)
        {
            List<int> numbers = new List<int> { 646, 452, 844, 1903, 112 };
            int max = findMax(numbers);
            Console.WriteLine($"Максимальный элемент: {max}");
            Console.ReadKey();
        }
    }
}

