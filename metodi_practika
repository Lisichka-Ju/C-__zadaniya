/*
Задача 5:
Удаление дубликатов из списка
Напишите метод, который принимает список и возвращает новый список без дубликатов.
*/
__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

using System;

namespace method
{
    class Program
    {
        static List<int> RemoveDuplicates(List<int> numbers)
        {
            if (numbers == null)
            {
                Console.WriteLine("Список не может быть null.");
                return new List<int>(); // Возвращаем пустой список
            }

            return numbers.Distinct().ToList();
        }

        static void Main(string[] args)
        {
            List<int> numbers = new List<int> { 1, 7, 2, 7, 4, 4, 9, 5, 1, 2, 5 };
            List<int> uniqueNumbers = RemoveDuplicates(numbers);
            Console.WriteLine($"Уникальные элементы: {string.Join(", ", uniqueNumbers)}");
            Console.ReadKey();
        }
    }
}




















