/* 
Упражнение 1
За каждый месяц банк начисляет к сумме вклада 7% от суммы. Напишите консольную программу, в которую пользователь вводит сумму вклада и количество месяцев. А банк вычисляет конечную сумму вклада с учетом начисления процентов за каждый месяц.
Для вычисления суммы с учетом процентов используйте цикл for. Для ввода суммы вклада используйте выражение Convert.ToDecimal(Console.ReadLine()) (сумма вклада будет представлять тип decimal).
*/
__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Введите сумму вклада:");
        decimal money = Convert.ToDecimal(Console.ReadLine());

        Console.WriteLine("Введите количество месяцев:");
        int months = Convert.ToInt32(Console.ReadLine());

        decimal now_summ = money;
        decimal procent = 0.07m; // 7%

        for (int i = 1; i <= months; i++)
        {
            now_summ += now_summ * procent;
        }

        Console.WriteLine("Сумма вклада через " + months + " месяцев составит: " + now_summ.ToString("F2") + "руб.");
        Console.ReadKey(); // Доп строчка чтобы консоль не закрывалась сразу
    }
}

__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

/*
Упражнение 2
Перепишите предыдущую программу, только вместо цикла for используйте цикл while.
*/
__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Введите сумму вклада:");
        decimal money = Convert.ToDecimal(Console.ReadLine());

        Console.WriteLine("Введите количество месяцев:");
        int months = Convert.ToInt32(Console.ReadLine());

        decimal now_summ = money;
        decimal procent = 0.07m; // 7% в виде десятичной дроби

        int i = 1; // Счетчик месяцев
        while (i <= months)
        {
            now_summ += now_summ * procent;
            i++; // Увеличиваем счетчик месяцев
        }

        Console.WriteLine("Сумма вклада через " + months + " месяцев составит: " + now_summ.ToString("F2"));
        Console.ReadKey(); // Чтобы консоль не закрывалась сразу
    }
}

__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

/*
Упражнение 3
Напишите программу, которая выводит на консоль таблицу умножения
*/
__________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________

using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Таблицa умножения");

        for (int i = 1; i <= 10; i++)
        {
            for (int n = 1; n <= 10; n++)
            {
                int result = i * n;
                Console.Write("{0,4}", result);
            }

            Console.WriteLine();
        }
        Console.ReadKey();
    }
}

